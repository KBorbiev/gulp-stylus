html(lang="en")
    head
        meta(charset="UTF-8")
        title Списко страниц
        style.
            body {
                background-color: #333;
            }

            .page-logo__image {
                width: 350px;
                margin: 0 0px 60px 42px;
                padding: 25px 0 0 0;
            }

            .page-logo__image img {
                width: 100%;
                display: block;
            }

            .page-list {
                counter-reset: li;
                list-style: none;
                margin-left: 50px;
            }
        
            .page-list__item {
                position: relative;
                max-width: 350px;
                border-top: 1px solid #222;
                transition: all .35s ease-in-out;
            }
            .page-list__item:hover {
                transform: translateX(46px);
                box-shadow: 0 3px 20px 2px #fafafa;
                z-index: 999;
            }

            .page-list__item:hover::before {
                background: #555;
                color: #fff;
            }
            .page-list__item:hover .page-list__link {
                background: #fff;
                color: #555;
            }

            .page-list__item:last-child {
                border-bottom: 1px solid #222;
            }

            .page-list__item::before {
            content: counter(li);
            counter-increment: li;
            position: absolute;
            top: -1px;
            left: -47px;
            width: 45px;
            color: #555;
            font-weight: bold;
            text-align: center;
            background: #fff;
            padding: 8px 0 9px;
            border: 1px solid #222;
            transition: all .25s ease-in-out;
            }

            .page-list__link {
                display: block;
                font-weight: 600;
                font-size: 20px;
                padding: 6px 0 6px 0;
                background-color: #555;
                color: #fff;
                text-decoration: none;
                transition: all .25s ease-in-out;
            }

